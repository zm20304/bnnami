{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build gcc",
			"type": "shell",
			"command": "/usr/bin/gcc -lm -g ${fileDirname}/${fileBasename} -o ${fileDirname}/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
		}
	]
}
